<%= form_with(model: feedback, local: true) do |form| %>
  <% if feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feedback.errors.count, "error") %><%= t('.prohibited') %></h2>

      <ul>
        <% feedback.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label t('.author') %>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label t('.body') %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit t('.send')%>
  </div>
<% end %>
