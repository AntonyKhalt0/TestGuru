<h3><%= t('.header', title: @test.title) %></h3>
<p>
  <%= t('.level', level: @test.level) %>
</p>
<p>
  <%= t('.category', category: @test.category.title) %>
</p>

<h4><%= t('.questions') %></h4>
<%= link_to t('.new_question'), new_admin_test_question_path(@test) %>
<table>
    <tr>
      <th>Id</th>
      <th><%= t('.body') %></th>
      <th colspan="3"><%= t('.actions') %></th>
    </tr>
    <%= render partial: 'admin/questions/question', collection: @test.questions %>
</table>

<%= link_to t('helpers.submit.test.edit'), edit_admin_test_path(@test) %>
<%= link_to t('.back'), admin_tests_path %>
