<%= form_with(model: [:admin, badge], local: true) do |form| %>
  <% if badge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(badge.errors.count, "error") %><%= t('.prohibited') %></h2>

      <ul>
        <% badge.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label t('.name') %>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label t('.img_url') %>
    <%= form.text_field :img_url, value: image_url('love.png') %>
    <%= image_tag('love.png') %>
  </p>

  <p>
    <%= form.label t('.rule') %>
    <%= form.select :rule, badges_rules, include_blank: t('.select_rule') %>
  </p>
  
  <p>
    <div class="field category hide">
      <%= form.label t('.rule_options') %>
      <%= form.collection_select :rule_options, Category.all, :id, :title, prompt: true %>
    </div>
  </p>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
