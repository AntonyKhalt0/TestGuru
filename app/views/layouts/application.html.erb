<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <p class="nav user">
        Welcome, <b><%= current_user.email %></b> Guru | 
        <%= link_to "Logout", destroy_user_session_path, method: :delete %>
      </p>
      <%= flash.now[:notice] = "Привет, #{current_user.first_name} #{current_user.last_name}!" %>
    <% end %>
    
    <%= render 'shared/footer' %>
    <%= render 'shared/flash' %>
    <%= yield %>
  </body>
</html>
